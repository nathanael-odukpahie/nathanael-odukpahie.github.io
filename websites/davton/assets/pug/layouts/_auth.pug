include ../_config.pug

block vars

<!DOCTYPE html>
html(lang="en")
	head
		//- M<eta Tags
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		//- Page Title
		title #{page.title}

		//- Links
		each link in page.links
			-;
			link(rel="stylesheet", href=link.url)

		//- Style Tags
		block css

	body
		
		.auth-container
			.container
				nav.navbar
					a.navbar-brand(href="/dist/index.html").mx-auto
						img(src="/assets/img/davtonn.png", alt="", height="25")
				//- Include Content
				block content

		include ../sections/_footer.pug

		//- JavaScript
		each script in page.scripts
			-;
			script(src=script.url)

		//- Script Tags
		block js